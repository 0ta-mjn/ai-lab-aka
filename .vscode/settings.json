{
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "chat.tools.terminal.autoApprove": {
    "make lint": true,
    "make typecheck": true,
    "make test": true,
    "make format": true
  }
}
